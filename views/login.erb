<!doctype html>
<html>
<head>
  <meta charset="UTF-8">

  <title>PAGE TITLE HERE</title>

  <link href="style.css" rel="stylesheet" type="text/css" />

  <link rel="stylesheet" type="text/css" href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css">

</head>

<body>

<header>
  <div id="header_container">
    <div id="header_logo">
      <img src="images/common/logo.png" width="300"  height="100" alt="Logo" />
    </div><!--end header_logo-->
  </div><!--end header-->
</header>

<nav>
  <div id="nav_container">

    <ul id="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/login">Log In</a></li>
      <li><a href="/register">Register</a></li>
      <li><a href="#">Relatives</a></li>
      <li><a href="#">Contact</a></li>
    </ul>
  </div><!--end navigation-->
</nav>

<div id="content">
  <div id="content_container">

    <!--  1/3 x 2/3 -->
    <div class="one_third">
      1/3 Column
    </div>
    <div class="two_third">
      2/3 Column
    </div>
    <div class="resetColumnSet"></div>

    <!--  1/3 x 1/3 x 1/3 -->
    <div class="one_third">
      1/3 Column
    </div>
    <div class="one_third">
      1/3 Column
    </div>
    <div class="one_third">
      1/3 Column
    </div>
    <div class="resetColumnSet"></div>

    <!--  1/4 x 1/4 x 1/4 x 1/4 -->
    <div class="one_fourth">1/4 Column</div>
    <div class="one_fourth">1/4 Column</div>
    <div class="one_fourth">1/4 Column</div>
    <div class="one_fourth">1/4 Column</div>
    <div class="resetColumnSet"></div>

  </div><!--end content_container-->
</div><!--end content-->


<div class="register">
  <h2>Log In</h2>
  <% if error %>
    <span style="color: red;"><%= error %></span>
  <% end %>
  <form action="/login" method="post">
    <div class="field">
      <p class="label">Email</p>
      <input type="email" name="email" autofocus="autofocus" placeholder="Enter your email address" label="email">
    </div>
    <div class="field">
      <p class="label">Password</p>
      <input type="password" name="password" placeholder="Choose a password" label="password">
    </div>
    <input type="submit" value="Log In" class="register_submit">
  </form>
</div>

<footer>
  <div id="footer_container">

    <!--  2/3 x 1/3 -->
    <div class="two_third">
      1/3 Column
    </div>
    <div class="one_third">
      2/3 Column
    </div>
    <div class="resetColumnSet"></div>

  </div><!--end footer_container-->
</footer>

</body>
</html>


